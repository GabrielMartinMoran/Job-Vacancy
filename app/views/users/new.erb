<h1>Registration</h1>
<% form_for(@user, user_create_path) do |f| %> <%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :email %>
 	<%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :short_bio %>
  <%= f.text_area :short_bio, style: 'width:65%;' %>
